<!-- MODAL BOOK DETAILS -->
<div id="modal-product" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Detalle Producto</h4>
            </div>
            <div class="modal-body text-center">
                <img class="img-circle popimage" src="~/Images/libros/{{product.item.Image}}.jpg" alt="Generic placeholder image" width="140" height="140">
                <h2>{{product.item.Titulo}}</h2>
                <p>{{product.item.Descripcion}}</p>
                <p class="precio"><strong>Precio (I.V.I)</strong>: &#162;{{product.item.Precio}}</p>
                <div class="form-group text-center" v-if="product.item.Stock === true">
                    <label>Cantidad:</label>
                    <select v-if="product.item.Stock === true" required v-model="product.quantity" number v-on:mouseup.keyup.change="updateModalDetailProdTotal()">
                        <option v-bind:value="item" v-for="item in quantity">{{item}}</option>
                    </select>
                    @*<input class="form-control book-quantity" type="number" min="1" max="100" v-model="product.quantity" v-on:click="updateModalDetailProdTotal() " />*@
                </div>
                <p v-else class="" style="color:red"><span class="glyphicon glyphicon-exclamation-sign"></span><strong>Agotado</strong></p>
                <span class="badge badgequantity"><strong>Total (I.V.I)</strong>:&#162;{{product.total}}</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button v-if="product.item.Stock === true" v-on:click="addToFactura(product)" type="button" class="btn btn-primary btn-proceed"><span class="glyphicon glyphicon-shopping-cart"></span> Agregar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
