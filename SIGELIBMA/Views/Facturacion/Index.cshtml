                        </form>
                        <hr>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-offset-1 col-sm-10 ">
                        <div @*v-if="factura !== null && factura.details !== null && factura.details.length >0"*@ class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th><a>Accion</a></th>
                                        <th><a>Codigo</a></th>
                                        <th><a>Titulo</a></th>
                                        <th><a>Cantidad</a></th>
                                        <th><a>Precio Unitario</a></th>
                                        <th><a>Precio Total</a></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="detail in factura.details">
                                        <td>
                                            <button class="btn btn-small btn-danger btn-removeFromFactura" v-on:click="removeFromFactura($index)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar</button>
                                        </td>
                                        <td>{{detail.item.Codigo}}</td>
                                        <td>{{detail.item.Titulo}}</td>
                                        <td>
                                            <input class="form-control" min="1" max="20" type="number" name="name" v-model="detail.quantity" v-on:keyup="updateFacturaDetail($index)" v-on:change="updateFacturaDetail($index)" v-on:blur="updateFacturaDetail($index)" />
                                        </td>
                                        <td>&#162;{{detail.item.PrecioSinImp}}</td>
                                        <td>&#162;{{detail.subtotal}}</td>
                                    </tr>
