@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrativo.cshtml";
}

<!--VUESTRAP ALERT == TOASTR-->
<toastr v-bind:show.sync="toastr.show" v-bind:placement="toastr.placement" v-bind:duration="toastr.duration" v-bind:type="toastr.type" v-bind:width="toastr.width" dismissable>
    <span v-if="lowerCase(toastr.type) === 'danger' " class="glyphicon glyphicon-warning-sign"></span>
    <span v-else class="glyphicon glyphicon-info-sign"></span>
    <strong v-if="lowerCase(toastr.type) === 'danger' ">Atencion!</strong>
    <strong v-else>Info!</strong>
    <p>{{toastr.message}}</p>
</toastr>
<!--MODAL FACTURA-->
<div id="modal-factura" class="modal fade" data-backdrop="false" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form v-on:submit.prevent="">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Factura</h4>
                </div>
                <div class="modal-body">
                    <div v-if="factura.details.length > 0">
                        <!-- Alert-->
                        <div class="row">
                            <div v-if="alertModal.status" class="col-sm-12 alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alertModal.type) === 'danger' , 'alert-info ' : lowerCase(alertModal.type) === 'info','alert-success ' : lowerCase(alertModal.type) === 'success'}">
                                <button type="button" class="close" v-on:click="alertModal.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <strong v-if="lowerCase(alertModal.type) === 'danger' ">Atencion!</strong>
                                <strong v-else>Info!</strong>
                                {{alertModal.message}}
                            </div>
                        </div>
                        <!-- Navbar-->
                        <div class="row">
                            <div class="col-sm-12">
                                <ul class="nav nav-pills nav-justified">
                                    <li role="presentation" v-bind:class="{ active: modalFact.currentPage === 1 }" v-on:click="modalFact.currentPage = 1">
                                        <a href="#">Info Cliente</a>
                                    </li>
                                    <li role="presentation" v-bind:class="{ active: modalFact.currentPage === 2 }" v-on:click="modalFact.currentPage = 2">
                                        <a href="#">Info Montos</a>
                                    </li>
                                </ul>
                                <hr class="navbar-separator" />
                            </div>
                        </div>
                        <!-- Content-->
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <spinner v-ref:spinner1 size="md" fixed text="Procesando compra, por favor espere."></spinner>
                                <!--page 1-->
                                <div v-if="modalFact.currentPage === 1">
                                    <h3>Datos Personales</h3><hr />
                                    <div class="form-group">
                                        <label>Identificacion: </label>
                                        <input class="form-control" type="text" placeholder="Nombre" required />
                                    </div>
                                    <div class="form-group">
                                        <label>Nombre: </label>
                                        <input class="form-control" type="text" placeholder="Nombre" required />
                                    </div>
                                    <div class="form-group">
                                        <label>Apellidos: </label>
                                        <input class="form-control" type="text" placeholder="Apellidos" required />
                                    </div>
                                </div>
                                <!--page 2-->
                                <div v-if="modalFact.currentPage === 2">
                                    <h3>Resumen Pago</h3><hr />
                                    <div class="form-group">
                                        <label>Moneda: </label>
                                        <select required class="form-control" disabled>
                                            <option value="1" selected>CR Colones</option>
                                            <option value="2">US Dolar</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Tipo Pago: </label>
                                        <select required class="form-control" disabled>
                                            <option value="1" selected>Efectivo</option>
                                            <option value="2">Tarjeta</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.total" label="Monto a Pagar:" help="" error="" placeholder="" pattern="^[0-9]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="false" required icon readonly></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.totalReceived" label="Monto Recibido:" help="" error="" placeholder="" pattern="^[0-9]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="false" required icon v-on:blur="updateChange()"></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.change" label="Cambio:" help="" error="" placeholder="" pattern="^[0-9]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="false" required icon readonly></vueinput>
                                    </div>
                                </div>
                                <!--page 3-->
                                <div v-if="modalFact.currentPage === 3">
                                    <h3>Resumen Transaccion</h3><hr />
                                    <div class="bg-info" >
                                        <h5><b>Su compra ha sido procesada!</b></h5>
                                        <p>Usted recibira un correo con el detalle de su compra. </p>
                                        <p>Confirmacion # <strong>{{factura.master.id}}</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pager Btns-->
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <nav aria-label="...">
                                    <ul class="pager">
                                        <li v-if="modalFact.currentPage > 1 && modalFact.currentPage <3" v-on:click="modalFact.currentPage -= 1">
                                            <a href="#"><span class="glyphicon glyphicon-arrow-left"></span> Regresar</a>
                                        </li>
                                        <li v-if="modalFact.currentPage >= 1 && modalFact.currentPage <2" v-on:click="modalFact.currentPage += 1 ">
                                            <a href="#">Siguiente <span class="glyphicon glyphicon-arrow-right"></span></a>
                                        </li>
                                        <li v-if="modalFact.currentPage === 2" v-on:click="processPayment() ">
                                            <a href="#">Procesar <span class="glyphicon glyphicon-arrow-right"></span></a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <h4 v-else class="text-center">Debe agregar un item a la factura</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--MODAL CAJA-->
<div id="modal-caja" class="modal fade" data-backdrop="false" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form >
                <div class="modal-header modal-mant">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Iniciar Caja</h4>
                </div>
                <div class="modal-body">
                    <spinner v-ref:spinner1 size="md" fixed text="Inicializando caja, por favor espere."></spinner>
                    <div v-if="alertModal.status" class="alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alertModal.type) === 'danger' , 'alert-info ' : lowerCase(alertModal.type) === 'info','alert-success ' : lowerCase(alertModal.type) === 'success'}">
                        <button type="button" class="close" v-on:click="alertModal.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong v-if="lowerCase(alertModal.type) === 'danger' ">Atencion!</strong>
                        <strong v-else>Info!</strong>
                        {{alertModal.message}}
                    </div>
                    <div v-if="cashBoxes !== null && cashBoxes.length > 0">
                        <div class="form-group">
                            <vueinput v-bind:value.sync="session.user.name" label="Usuario" v-bind:enter-submit="true" readonly required></vueinput>
                        </div>
                        <div class="form-group">
                            <vueinput v-bind:value.sync="session.user.username" label="Nombre de Usuario" v-bind:enter-submit="true" readonly required></vueinput>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="control-label">Caja:</label>
                            <select v-model="cashier" class="form-control">
                                <option value="null" selected disabled>-- Seleccione una Caja --</option>
                                <option v-for="item in cashBoxes" v-bind:value="item">{{item.Descripcion}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <vueinput v-bind:value.sync="" label="Monto Inicio" type="number" v-bind:enter-submit="true" required></vueinput>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button v-if="cashBoxes !== null && cashBoxes.length > 0" type="button" class="btn btn-save " v-on:click="initializeCashBox()">Iniciar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- MODAL BOOK DETAILS -->
<div id="modal-product" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Detalle Producto</h4>
            </div>
            <div class="modal-body text-center">
                @*<div v-if="alertModalBookDetails.status" class="alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alertModalBookDetails.type) === 'danger' , 'alert-info ' : lowerCase(alertModalBookDetails.type) === 'info','alert-success ' : lowerCase(alertModalBookDetails.type) === 'success'}">
                    <button type="button" class="close" v-on:click="alertModalBookDetails.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong v-if="lowerCase(alertModalBookDetails.type) === 'danger' ">Atencion!</strong>
                    <strong v-else>Info!</strong>
                    {{alertModalBookDetails.message}}
                </div>*@
                <img class="img-circle popimage" src="~/Images/libros/{{product.item.Image}}.jpg" alt="Generic placeholder image" width="140" height="140">
                <h2>{{product.item.Titulo}}</h2>
                <p>{{product.item.Descripcion}}</p>
                <p class="precio"><strong>Precio (I.V.I)</strong>: &#162;{{product.item.Precio}}</p>
                <div class="form-group text-center">
                    <label>Cantidad:</label>
                    <input class="form-control book-quantity" type="number" min="1" max="100" v-model="product.quantity" v-on:click="updateModalDetailProdTotal() " />
                </div>
                <span class="badge badgequantity"><strong>Total (I.V.I)</strong>:&#162;{{product.total}}</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button v-on:click="addToFactura(product)" type="button" class="btn btn-primary btn-proceed"><span class="glyphicon glyphicon-shopping-cart"></span> Agregar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--Loading info container-->
<div class="row" v-show="validations.showSpinner">
    <div class="loading col-sm-12 ">
        <img src="~/Images/spinner.gif" width="100px" height="100px" />
        <p>{{validations.loadingMessage}}</p>
    </div>
</div>
<!-- Alert page critical errors-->
<div v-if="alert.status" class="alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alert.type) === 'danger' , 'alert-info ' : lowerCase(alert.type) === 'info','alert-success ' : lowerCase(alert.type) === 'success'}">
    <button type="button" class="close" v-on:click="alert.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong v-if="lowerCase(alert.type) === 'danger' ">Atencion!</strong>
    <strong v-else>Info!</strong>
    {{alert.message}}
</div>


<div id="wrapper" v-show="!validations.showSpinner">
    <!--NAVBAR-->
    <section class="row">
        <div class="col-sm-12">
            <ul class="nav nav-tabs ">
                <li role="presentation" class="active"><a href="#/home">Home</a></li>
                <li role="presentation"> <a href="#/configuration">Configuration</a></li>
                <li role="presentation"><a href="#/devices">Devices</a></li>
                <li role="presentation"><a href="#/bna">BNA Criteria</a></li>
                <li role="presentation"><a href="#/users">Users</a></li>
                <li role="presentation"><a href="#/fabs">Fabs</a></li>
            </ul>
        </div>
    </section>
    <!-- PAGE BODY -->
    <section class="section-body" style="background-color: #e3e6e8; margin: 10px 0px;padding: 10px 10px">
        <!-- TITLE BAR -->
        <section style="background-color: white;padding: 10px 30px;margin:0px 0px 10px 0px">
            <div class="row">
                <div class="col-sm-12">
                    <div class="title-bar title-bar-blur">
                        <span class="title-bar-title">Ventas</span>
                        <span class="title-bar-subtitle">Facturacion</span>
                    </div>
                    <button v-if="cashier && cashier.Estado === 1" v-on:click="closeCashBox()" class="btn btn-primary pull-right" type="button" aria-expanded="false" aria-controls="collapseFactMain">
                        Cerrar Caja
                    </button>
            
                    <button v-else v-on:click="openModal(null, 'modal-caja')" class="btn btn-primary pull-right" type="button"  aria-expanded="false" aria-controls="collapseFactMain">
                        Abrir Caja
                    </button>
                    
                </div>
            </div>
        </section>
        <!-- BODY -->
        <section class="collapse " id="collapseFactMain" style="background-color: white;padding: 10px 30px;margin:0px 0px 10px 0px">        
                <div class="row" style="padding-top:20px;">
                    <div class="col-sm-offset-1 col-sm-10 form-inline" style="margin-bottom:25px">
                        <form name="" class="" >
                            <div class="input-group search">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filtro <span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li v-on:click="searchByData = codigos"><a href="#">Codigo</a></li>
                                        <li v-on:click="searchByData = titulos"><a href="#">Titulo</a></li>
                                    </ul>
                                </div><!-- /btn-group -->
                                <typeahead v-bind:value.sync="searchSelected" v-bind:data="searchByData" placeholder="Busqueda">
                                </typeahead>
                                <span class="input-group-btn">
                                    <button class="btn btn-success" v-on:click="openModal(null,'modal-product')" type="button">Mostrar!</button>
                                </span>
                            </div><!-- /input-group -->

                        </form>
                        <hr>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-offset-1 col-sm-10 ">
                        <div @*v-if="factura !== null && factura.details !== null && factura.details.length >0"*@ class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th><a>Accion</a></th>
                                        <th><a>Codigo</a></th>
                                        <th><a>Titulo</a></th>
                                        <th><a>Cantidad</a></th>
                                        <th><a>Precio Unitario</a></th>
                                        <th><a>Precio Total</a></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="detail in factura.details">
                                        <td>
                                            <button class="btn btn-small btn-danger btn-removeFromFactura" v-on:click="removeFromFactura($index)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar</button>
                                        </td>
                                        <td>{{detail.item.Codigo}}</td>
                                        <td>{{detail.item.Titulo}}</td>
                                        <td>
                                            <input class="form-control" min="1" max="20" type="number" name="name" v-model="detail.quantity" v-on:keyup="updateFacturaDetail($index)" v-on:change="updateFacturaDetail($index)" v-on:blur="updateFacturaDetail($index)" />
                                        </td>
                                        <td>&#162;{{detail.item.PrecioSinImp}}</td>
                                        <td>&#162;{{detail.subtotal}}</td>
                                    </tr>
                                    <tr>

                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Subtotal: </td>
                                        <td>&#162;{{factura.master.subtotal}}</td>
                                    </tr>
                                    <tr>

                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Impuestos (I.V.A): </td>
                                        <td>&#162;{{factura.master.taxes}}</td>
                                    </tr>
                                    <tr>

                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Total (I.V.I): </td>
                                        <td>&#162;{{factura.master.total}}</td>
                                    </tr>
                                    <tr class="">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            <button class="btn btn-lg btn-block btn-info" v-on:click="openModal(null, 'modal-factura')">Facturar</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

        </section>
    </section>
</div>
