<!-- Alert page critical errors-->
<div v-if="alert.status" class="alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alert.type) === 'danger' , 'alert-info ' : lowerCase(alert.type) === 'info','alert-success ' : lowerCase(alert.type) === 'success'}">
    <button type="button" class="close" v-on:click="alert.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong v-if="lowerCase(alert.type) === 'danger' ">Atencion!</strong>
    <strong v-else>Info!</strong>
    {{alert.message}}
</div>


<div id="wrapper" v-show="!validations.showSpinner">
    
    <!-- PAGE BODY -->
    <section class="section-body" style="background-color: #e3e6e8; margin: 10px 0px;padding: 10px 10px">
        <!-- TITLE BAR -->
        <section style="background-color: white;padding: 10px 30px;margin:0px 0px 10px 0px">
            <div class="row">
                <div class="col-sm-12">
                    <div class="title-bar title-bar-blur">
                        <span class="title-bar-title">Ventas</span>
                        <span class="title-bar-subtitle">Facturacion</span>
                    </div>
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Opciones de Caja 
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" v-if="cashier && cashier.Estado === 1">
                            <li v-on:click="openModal(null,'modal-cierre')"><a href="#">Cerrar</a></li>
                            <li role="separator" class="divider"></li>
                            <li v-on:click="openModal(null,'modal-retiroAbono')"><a href="#">Abonar/Retirar</a></li>
                            <li role="separator" class="divider"></li>
                            <li v-on:click="openModal(null,'modal-movimientos')"><a href="#">Movimientos del Dia</a></li>
                        </ul>
                        <ul class="dropdown-menu" v-else>
                            <li v-on:click="openModal(null, 'modal-caja')" ><a href="#">Abrir</a></li>
                        </ul>
                    </div><!-- /btn-group -->           
                </div>
            </div>
        </section>
        <!-- BODY -->
        <section class="collapse " id="collapseFactMain" style="background-color: white;padding: 10px 30px;margin:0px 0px 10px 0px">        
                <div class="row" style="padding-top:20px;">
                    <div class="col-sm-offset-1 col-sm-10 form-inline" style="margin-bottom:25px">
                        <form name="" class="" >
                            <div class="input-group search">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filtro <span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li v-on:click="searchByData = codigos, searchSelected = ''"><a href="#">Codigo</a></li>
                                        <li v-on:click="searchByData = titulos, searchSelected = ''"><a href="#">Titulo</a></li>
                                    </ul>
                                </div><!-- /btn-group -->
                                <typeahead v-bind:value.sync="searchSelected" v-bind:data="searchByData" placeholder="Busqueda">
                                </typeahead>
                                <span class="input-group-btn">
                                    <button class="btn btn-success" v-on:click="openModal(null,'modal-product')" type="button">Mostrar!</button>
                                </span>
                            </div><!-- /input-group -->

                        </form>
                        <hr>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-offset-1 col-sm-10 ">
                        <div @*v-if="factura !== null && factura.details !== null && factura.details.length >0"*@ class="table-responsive">
                            <fieldset v-bind:disabled="enableFacturar === false && (factura === null || factura.details === null || factura.details <= 0)">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th><a>Accion</a></th>
                                            <th><a>Codigo</a></th>
                                            <th><a>Titulo</a></th>
                                            <th><a>Cantidad</a></th>
                                            <th><a>Precio Unitario</a></th>
                                            <th><a>Precio Total</a></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr v-for="detail in factura.details">
                                            <td>
                                                <button class="btn btn-small btn-danger btn-removeFromFactura" v-on:click="removeFromFactura($index)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar</button>
                                            </td>
                                            <td>{{detail.item.Codigo}}</td>
                                            <td>{{detail.item.Titulo}}</td>
                                            <td>
                                                <select required v-model="detail.quantity" number v-on:mouseup.keyup.change="updateFacturaDetail($index)">
                                                    <option v-bind:value="item" v-for="item in quantity">{{item}}</option>
                                                </select>
                                                @*<input class="form-control" min="1" max="20" type="number" name="name" v-model="detail.quantity" v-on:keyup="updateFacturaDetail($index)" v-on:change="updateFacturaDetail($index)" v-on:blur="updateFacturaDetail($index)" />*@
                                            </td>
                                            <td>&#162;{{detail.item.PrecioSinImp}}</td>
                                            <td>&#162;{{detail.subtotal}}</td>
                                        </tr>
                                        <tr>

                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td>Subtotal: </td>
                                            <td>&#162;{{factura.master.subtotal}}</td>
                                        </tr>
                                        <tr>

                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td>Impuestos (I.V.A): </td>
                                            <td>&#162;{{factura.master.taxes}}</td>
                                        </tr>
                                        <tr>

                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td>Total (I.V.I): </td>
                                            <td>&#162;{{factura.master.total}}</td>
                                        </tr>
                                        <tr class="">
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td>
                                                <button class="btn btn-lg btn-block btn-info" v-on:click="openModal(null, 'modal-factura')">Facturar</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </fieldset>
                        </div>
                    </div>
                </div>

        </section>
    </section>
</div>
