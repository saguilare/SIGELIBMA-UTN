                    <div class="col-sm-offset-1 col-sm-10 form-inline" style="margin-bottom:25px">
                        <form name="" class="" >
                            <div class="input-group search">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filtro <span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li v-on:click="searchByData = codigos"><a href="#">Codigo</a></li>
                                        <li v-on:click="searchByData = titulos"><a href="#">Titulo</a></li>
                                    </ul>
                                </div><!-- /btn-group -->
                                <typeahead v-bind:value.sync="searchSelected" v-bind:data="searchByData" placeholder="Busqueda">
                                </typeahead>
                                <span class="input-group-btn">
                                    <button class="btn btn-success" v-on:click="openModal(null,'modal-product')" type="button">Mostrar!</button>
                                </span>
