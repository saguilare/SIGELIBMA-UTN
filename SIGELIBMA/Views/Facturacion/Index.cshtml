@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrativo.cshtml";
}

<!--VUESTRAP ALERT == TOASTR-->
<toastr v-bind:show.sync="toastr.show" v-bind:placement="toastr.placement" v-bind:duration="toastr.duration" v-bind:type="toastr.type" v-bind:width="toastr.width" dismissable>
    <span v-if="lowerCase(toastr.type) === 'danger' " class="glyphicon glyphicon-warning-sign"></span>
    <span v-else class="glyphicon glyphicon-info-sign"></span>
    <strong v-if="lowerCase(toastr.type) === 'danger' ">Atencion!</strong>
    <strong v-else>Info!</strong>
    <p>{{toastr.message}}</p>
</toastr>
<!--MODAL FACTURA-->
<div id="modal-factura" class="modal fade" data-backdrop="false" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form v-on:submit.prevent="">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Factura</h4>
                </div>
                <div class="modal-body">
                    <div v-if="factura.details.length > 0">
                        <!-- Alert-->
                 
                        <div v-if="alertModal.status" class="col-sm-12 alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alertModal.type) === 'danger' , 'alert-info ' : lowerCase(alertModal.type) === 'info','alert-success ' : lowerCase(alertModal.type) === 'success'}">
                            <button type="button" class="close" v-on:click="alertModal.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <strong v-if="lowerCase(alertModal.type) === 'danger' ">Atencion!</strong>
                            <strong v-else>Info!</strong>
                            {{alertModal.message}}
                        </div>
                      
                        <!-- Navbar-->
                        <div class="row">
                            <div class="col-sm-12" v-if="showFacturaModelNavbar === true">
                                <ul class="nav nav-pills nav-justified">
                                    <li role="presentation" v-bind:class="{ active: modalFact.currentPage === 1 }" v-on:click="modalFact.currentPage = 1">
                                        <a href="#">Info Cliente</a>
                                    </li>
                                    <li role="presentation" v-bind:class="{ active: modalFact.currentPage === 2 }" v-on:click="modalFact.currentPage = 2">
                                        <a href="#">Info Montos</a>
                                    </li>
                                </ul>
                                <hr class="navbar-separator" />
                            </div>
                        </div>
                        <!-- Content-->
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <spinner v-ref:spinner1 size="md" fixed text="Procesando compra, por favor espere."></spinner>
                                <!--page 1-->
                                <div v-if="modalFact.currentPage === 1">
                                    <h3>Datos Personales</h3><hr />
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.client.name" label="Nombre" help="" error="Este campo es requerido/Solo acepta letras." placeholder="Nombre" pattern="^[a-zA-Z\s]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="true" required icon></vueinput>
                                    </div>
                                    <div class="form-gr<up">
                                        <vueinput v-bind:value.sync="factura.master.client.lastname" label="Apellido" help="" error="Este campo es requerido/Solo acepta letras." placeholder="Apellido" pattern="^[a-zA-Z\s]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="true" required icon></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.client.id" label="Cedula" help="" error="Este campo es requerido." placeholder="Cedula" pattern="^[a-zA-Z0-9]+$" mask="" minlength="9" v-bind:enter-submit="true" v-bind:clear-button="true" required icon></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.client.phone" label="Telefono" help="" error="Este campo es requerido/Solo acepta numeros." placeholder="Telefono" pattern="^[0-9]+$" mask="" minlength="8" v-bind:enter-submit="true" v-bind:clear-button="true" required icon></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.client.email" label="Email" help="" type="email" error="Este campo es requerido." placeholder="Email" pattern="[a-zA-Z0-9._%+-]+&#64;[a-zA-Z0-9.-]+\.[a-zA-Z]{2,3}$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="true" required icon></vueinput>
                                    </div>
                                </div>
                                <!--page 2-->
                                <div v-if="modalFact.currentPage === 2">
                                    <h3>Resumen Pago</h3><hr />
                                    <div class="form-group">
                                        <label>Tipo Pago: </label>
                                        <select v-model="factura.master.tipoPago" required class="form-control" >
                                            <option value="" selected disabled>-- Seleccione Tipo --</option>
                                            <option v-bind:value="tipo" v-for="tipo in tiposPago">{{tipo.Descripcion}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group" v-if="factura.master.tipoPago.Codigo !== 1">
                                        <vueinput v-bind:value.sync="factura.master.referencia" label="No Referencia/Deposito: " help="" error="" placeholder="" pattern="^[a-zA-Z0-9]+$" mask="" minlength="5" v-bind:enter-submit="true" v-bind:clear-button="false" icon></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.total" label="Monto a Pagar:" help="" error="" placeholder="" pattern="^[0-9]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="false" required icon readonly></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.totalReceived" label="Monto Recibido:" help="" error="" placeholder="" pattern="^[0-9]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="false" required icon v-on:blur="updateChange()"></vueinput>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="factura.master.change" label="Cambio:" help="" error="" placeholder="" pattern="^[0-9]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="false" required icon readonly></vueinput>
                                    </div>
                                </div>
                                <!--page 3-->
                                <div v-if="modalFact.currentPage === 3">
                                    <h3>Resumen Transaccion</h3><hr />
                                    <div class="bg-info" >
                                        <h5><b>La compra ha sido procesada con exito!</b></h5>
                                        <p>Factura #<strong>{{factura.master.id}}</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pager Btns-->
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <nav aria-label="...">
                                    <ul class="pager">
                                        <li v-if="modalFact.currentPage > 1 && modalFact.currentPage <3" v-on:click="modalFact.currentPage -= 1">
                                            <a href="#"><span class="glyphicon glyphicon-arrow-left"></span> Regresar</a>
                                        </li>
                                        <li v-if="modalFact.currentPage >= 1 && modalFact.currentPage <2" v-on:click="modalFact.currentPage += 1 ">
                                            <a href="#">Siguiente <span class="glyphicon glyphicon-arrow-right"></span></a>
                                        </li>
                                        <li v-if="modalFact.currentPage === 2" v-on:click="processPayment() ">
                                            <a href="#">Procesar <span class="glyphicon glyphicon-arrow-right"></span></a>
                                        </li>
                                        <li v-if="modalFact.currentPage === 3" >
                                            <a href="#" class="imprimir">Imprimir <span class="glyphicon glyphicon-print"></span></a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <h4 v-else class="text-center">Debe agregar un item a la factura</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default " data-dismiss="modal" v-on:click="modalFacturaClose()">Cerrar</button>

                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--MODAL CAJA-->
<div id="modal-caja" class="modal fade" data-backdrop="false" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form >
                <div class="modal-header modal-mant">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Iniciar Caja</h4>
                </div>
                <div class="modal-body">
                    <spinner v-ref:spinner1 size="md" fixed text="Inicializando caja, por favor espere."></spinner>
                    <div v-if="alertModal.status" class="alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alertModal.type) === 'danger' , 'alert-info ' : lowerCase(alertModal.type) === 'info','alert-success ' : lowerCase(alertModal.type) === 'success'}">
                        <button type="button" class="close" v-on:click="alertModal.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong v-if="lowerCase(alertModal.type) === 'danger' ">Atencion!</strong>
                        <strong v-else>Info!</strong>
                        {{alertModal.message}}
                    </div>
                    <div v-if="cashBoxes !== null && cashBoxes.length > 0">
                        <div class="form-group">
                            <vueinput v-bind:value.sync="session.user.name" label="Usuario" v-bind:enter-submit="true" readonly required></vueinput>
                        </div>
                        <div class="form-group">
                            <vueinput v-bind:value.sync="session.user.username" label="Nombre de Usuario" v-bind:enter-submit="true" readonly required></vueinput>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="control-label">Caja:</label>
                            <select v-model="cashier" class="form-control">
                                <option value="null" selected disabled>-- Seleccione una Caja --</option>
                                <option v-for="item in cashBoxes" v-bind:value="item">{{item.Descripcion}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <vueinput v-bind:value.sync="cashier.Monto" label="Monto Inicio" type="number" v-bind:enter-submit="true" required></vueinput>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button v-if="cashBoxes !== null && cashBoxes.length > 0" type="button" class="btn btn-save " v-on:click="initializeCashBox()">Iniciar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--MODAL RETIROABONO CAJA-->
<div id="modal-retiroAbono" class="modal fade" data-backdrop="false" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form v-on:submit.prevent="">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Movimiento Dinero</h4>
                </div>
                <div class="modal-body">
              
                        <!-- Alert-->
                        <div v-if="alertModal.status" class="col-sm-12 alert alert-dismissible" role="alert" v-bind:class="{ 'alert-danger ' : lowerCase(alertModal.type) === 'danger' , 'alert-info ' : lowerCase(alertModal.type) === 'info','alert-success ' : lowerCase(alertModal.type) === 'success'}">
                            <button type="button" class="close" v-on:click="alertModal.status = false" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <strong v-if="lowerCase(alertModal.type) === 'danger' ">Atencion!</strong>
                            <strong v-else>Info!</strong>
                            {{alertModal.message}}
                        </div>

                        <!-- Content-->
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <spinner v-ref:spinner1 size="md" fixed text="Procesando compra, por favor espere."></spinner>
                                <!--page 1-->
                                <div v-if="movimiento.procesado === false">
                                    <h3>Movimiento de Dinero</h3><hr />
                                    <div class="form-group" required>
                                        <select class="form-control" v-model="movimiento.tipo">
                                            <option value="0" selected disabled>-- Seleccion un Tipo --</option>
                                            <option v-for="mov in tiposMovimiento" v-bind:value="mov.codigo">{{mov.descripcion}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <vueinput v-bind:value.sync="movimiento.monto" type="number" label="Monto" help="" error="Este campo es requerido/Solo acepta numeros." placeholder="Monto" pattern="^[0-9]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="true" required icon></vueinput>
                                    </div>
                                    <div class="form-gr<up">
                                        <vueinput v-bind:value.sync="movimiento.razon" label="Descripcion" help="" error="Este campo es requerido." placeholder="Justificacion" pattern="^[0-9a-zA-Z\s]+$" mask="" minlength="" v-bind:enter-submit="true" v-bind:clear-button="true" required icon></vueinput>
                                    </div>
                                </div>
                             
                                <!--page 2-->
                                <div v-if="movimiento.procesado === true">
                                    <h3>Resumen Movimiento</h3><hr />
                                    <div class="bg-info">
                                        <h5><b>El movimiento se efectuo con exito!</b></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pager Btns-->
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <nav aria-label="...">
                                    <ul class="pager">
                                        <li v-if="movimiento.procesado === false" v-on:click="aplicarMovimiento()">
                                            <a href="#">Procesar <span class="glyphicon glyphicon-arrow-right"></span></a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default " data-dismiss="modal" >Cerrar</button>

                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- MODAL BOOK DETAILS -->
